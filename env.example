# Основные настройки
APP_NAME=StaffProBot
ENVIRONMENT=development
DEBUG=true

# База данных
DATABASE_URL=postgresql://postgres:password@localhost:5432/staffprobot_dev
POSTGRES_DB=staffprobot_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://admin:password@localhost:5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=s.litvak.com1@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here
SMTP_FROM_EMAIL=s.litvak.com1@gmail.com
SMTP_FROM_NAME=StaffProBot
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Геолокация
MAX_DISTANCE_METERS=500
LOCATION_ACCURACY_METERS=50

# Яндекс Карты
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here

# Мониторинг
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Безопасность
SECRET_KEY=your_secret_key_here

# Системные настройки
DOMAIN=localhost:8001
SSL_EMAIL=admin@localhost
NGINX_CONFIG_PATH=/etc/nginx/sites-available
CERTBOT_PATH=/usr/bin/certbot
USE_HTTPS=false







