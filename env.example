# Основные настройки
APP_NAME=StaffProBot
ENVIRONMENT=development
DEBUG=true

# База данных
DATABASE_URL=postgresql://postgres:password@localhost:5432/staffprobot_dev
POSTGRES_DB=staffprobot_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# RabbitMQ
RABBITMQ_URL=amqp://admin:password@localhost:5672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=password

# Telegram
# Для DEV окружения используйте TELEGRAM_BOT_TOKEN_DEV,
# для PROD — TELEGRAM_BOT_TOKEN_PROD. TELEGRAM_BOT_TOKEN_OVERRIDE можно
# задать вручную при локальных тестах (приоритет выше всех остальных).
TELEGRAM_BOT_TOKEN_DEV=1111111111:DEV_EXAMPLE_TOKEN
TELEGRAM_BOT_TOKEN_PROD=
TELEGRAM_BOT_TOKEN_OVERRIDE=

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your_gmail_app_password_here
SMTP_FROM_EMAIL=noreply@staffprobot.ru
SMTP_FROM_NAME=StaffProBot
SMTP_USE_TLS=true
SMTP_USE_SSL=false

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Геолокация
MAX_DISTANCE_METERS=500
LOCATION_ACCURACY_METERS=50

# Яндекс Карты
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here

# Мониторинг
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin

# Безопасность
SECRET_KEY=your_secret_key_here

# Системные настройки
DOMAIN=localhost:8001
SSL_EMAIL=admin@localhost
NGINX_CONFIG_PATH=/etc/nginx/sites-available
CERTBOT_PATH=/usr/bin/certbot
USE_HTTPS=false

# YooKassa (платежный шлюз)
YOOKASSA_SHOP_ID=your_shop_id_here
YOOKASSA_SECRET_KEY=your_secret_key_here
YOOKASSA_WEBHOOK_SECRET=your_webhook_secret_here
YOOKASSA_TEST_MODE=true

# GitHub (для DevOps Center - Issues API)
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=OWNER/REPO

# Медиа-хранилище (restruct1): telegram | minio | s3
# telegram — только TG; minio — dev (Docker); s3 — любой S3-совместимый (reg.ru, Cloud.ru, AWS и т.д.)
MEDIA_STORAGE_PROVIDER=telegram
MEDIA_PRESIGNED_EXPIRES_SECONDS=3600

# MinIO (dev)
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=staffprobot-media

# S3-совместимое хранилище (prod: reg.ru, Cloud.ru, AWS и т.д.)
# reg.ru: панель → Объектное хранилище S3 → ключи доступа → Endpoint, Access Key, Secret Key, имя бакета
# Пример reg.ru / Cloud.ru: https://s3.cloud.ru или ваш endpoint из панели
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_REGION=us-east-1







