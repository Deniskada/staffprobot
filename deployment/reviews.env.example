# Конфигурация системы отзывов и рейтингов

# =============================================================================
# НАСТРОЙКИ МЕДИА-ФАЙЛОВ
# =============================================================================

# Директория для загрузки медиа-файлов
MEDIA_UPLOAD_DIR=/app/uploads

# Максимальные размеры файлов (в байтах)
MAX_PHOTO_SIZE=5242880          # 5MB
MAX_VIDEO_SIZE=52428800         # 50MB
MAX_AUDIO_SIZE=20971520         # 20MB
MAX_DOCUMENT_SIZE=10485760      # 10MB

# Разрешенные MIME-типы
ALLOWED_PHOTO_TYPES=image/jpeg,image/png,image/gif,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/avi,video/mov,video/webm
ALLOWED_AUDIO_TYPES=audio/mp3,audio/wav,audio/ogg,audio/m4a
ALLOWED_DOCUMENT_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# =============================================================================
# НАСТРОЙКИ МОДЕРАЦИИ
# =============================================================================

# Время на модерацию отзыва (в часах)
MODERATION_TIME_LIMIT_HOURS=48

# Время на рассмотрение обжалования (в часах)
APPEAL_TIME_LIMIT_HOURS=72

# Минимальная длина контента отзыва (в символах)
MIN_CONTENT_LENGTH=20

# Максимальная длина контента отзыва (в символах)
MAX_CONTENT_LENGTH=1000

# Максимальная длина заголовка отзыва (в символах)
MAX_TITLE_LENGTH=200

# =============================================================================
# НАСТРОЙКИ РЕЙТИНГОВ
# =============================================================================

# Период полураспада для веса отзывов (в днях)
RATING_HALF_LIFE_DAYS=90

# Начальный рейтинг для новых объектов/сотрудников
INITIAL_RATING=5.0

# Точность рейтинга (шаг)
RATING_PRECISION=0.5

# Минимальное количество отзывов для публикации рейтинга
MIN_REVIEWS_FOR_RATING=1

# =============================================================================
# НАСТРОЙКИ УВЕДОМЛЕНИЙ
# =============================================================================

# Включить уведомления о модерации
ENABLE_MODERATION_NOTIFICATIONS=true

# Включить уведомления об обжалованиях
ENABLE_APPEAL_NOTIFICATIONS=true

# Включить уведомления о новых отзывах
ENABLE_NEW_REVIEW_NOTIFICATIONS=true

# Включить уведомления об обновлении рейтингов
ENABLE_RATING_UPDATE_NOTIFICATIONS=true

# =============================================================================
# НАСТРОЙКИ БЕЗОПАСНОСТИ
# =============================================================================

# Включить автоматические фильтры
ENABLE_AUTO_FILTERS=true

# Включить проверку на спам
ENABLE_SPAM_FILTER=true

# Включить проверку на нецензурную лексику
ENABLE_PROFANITY_FILTER=true

# Включить проверку на личную информацию
ENABLE_PERSONAL_INFO_FILTER=true

# Включить проверку на дублирование
ENABLE_DUPLICATE_FILTER=true

# =============================================================================
# НАСТРОЙКИ ПРОИЗВОДИТЕЛЬНОСТИ
# =============================================================================

# Размер пула соединений с базой данных
DB_POOL_SIZE=20

# Максимальное количество соединений
DB_MAX_OVERFLOW=30

# Таймаут соединения (в секундах)
DB_POOL_TIMEOUT=30

# Включить кэширование рейтингов
ENABLE_RATING_CACHE=true

# Время жизни кэша рейтингов (в секундах)
RATING_CACHE_TTL=300

# Включить кэширование статистики
ENABLE_STATS_CACHE=true

# Время жизни кэша статистики (в секундах)
STATS_CACHE_TTL=600

# =============================================================================
# НАСТРОЙКИ ЛОГИРОВАНИЯ
# =============================================================================

# Уровень логирования для системы отзывов
REVIEWS_LOG_LEVEL=INFO

# Включить детальное логирование модерации
ENABLE_MODERATION_DEBUG_LOGS=false

# Включить логирование производительности
ENABLE_PERFORMANCE_LOGS=true

# Включить логирование безопасности
ENABLE_SECURITY_LOGS=true

# =============================================================================
# НАСТРОЙКИ МОНИТОРИНГА
# =============================================================================

# Включить метрики Prometheus
ENABLE_PROMETHEUS_METRICS=true

# Включить метрики времени ответа
ENABLE_RESPONSE_TIME_METRICS=true

# Включить метрики использования памяти
ENABLE_MEMORY_METRICS=true

# Включить метрики базы данных
ENABLE_DB_METRICS=true

# =============================================================================
# НАСТРОЙКИ АЛЕРТОВ
# =============================================================================

# Порог для алерта о просроченной модерации (в часах)
MODERATION_ALERT_THRESHOLD=36

# Порог для алерта о просроченных обжалованиях (в часах)
APPEAL_ALERT_THRESHOLD=60

# Порог для алерта о высокой доле отклонений (в процентах)
HIGH_REJECTION_RATE_THRESHOLD=30

# Порог для алерта о низкой активности модераторов
LOW_MODERATOR_ACTIVITY_THRESHOLD=24

# =============================================================================
# НАСТРОЙКИ ОТЧЕТОВ
# =============================================================================

# Включить автоматическую генерацию отчетов
ENABLE_AUTO_REPORTS=true

# Период генерации отчетов (daily, weekly, monthly)
REPORT_GENERATION_PERIOD=weekly

# Время генерации отчетов (HH:MM)
REPORT_GENERATION_TIME=02:00

# Включить отправку отчетов по email
ENABLE_EMAIL_REPORTS=true

# Email для получения отчетов
REPORTS_EMAIL=admin@staffprobot.ru

# =============================================================================
# НАСТРОЙКИ АРХИВИРОВАНИЯ
# =============================================================================

# Включить автоматическое архивирование старых отзывов
ENABLE_AUTO_ARCHIVING=true

# Возраст отзывов для архивирования (в днях)
ARCHIVE_REVIEWS_OLDER_THAN_DAYS=365

# Включить сжатие архивированных данных
ENABLE_ARCHIVE_COMPRESSION=true

# =============================================================================
# НАСТРОЙКИ РЕЗЕРВНОГО КОПИРОВАНИЯ
# =============================================================================

# Включить автоматическое резервное копирование
ENABLE_AUTO_BACKUP=true

# Период резервного копирования (daily, weekly)
BACKUP_PERIOD=daily

# Время резервного копирования (HH:MM)
BACKUP_TIME=03:00

# Количество дней хранения резервных копий
BACKUP_RETENTION_DAYS=30

# Директория для резервных копий
BACKUP_DIR=/app/backups

# =============================================================================
# НАСТРОЙКИ ИНТЕГРАЦИИ
# =============================================================================

# Включить интеграцию с внешними системами
ENABLE_EXTERNAL_INTEGRATIONS=false

# URL внешней системы модерации
EXTERNAL_MODERATION_API_URL=

# API ключ для внешней системы модерации
EXTERNAL_MODERATION_API_KEY=

# Таймаут для внешних API (в секундах)
EXTERNAL_API_TIMEOUT=30

# =============================================================================
# НАСТРОЙКИ РАЗВЕРТЫВАНИЯ
# =============================================================================

# Окружение (development, staging, production)
ENVIRONMENT=production

# Версия системы отзывов
REVIEWS_VERSION=1.0.0

# Включить режим обслуживания
MAINTENANCE_MODE=false

# Сообщение о режиме обслуживания
MAINTENANCE_MESSAGE=Система отзывов временно недоступна. Ведутся технические работы.

# =============================================================================
# НАСТРОЙКИ ТЕСТИРОВАНИЯ
# =============================================================================

# Включить тестовый режим
TEST_MODE=false

# Использовать тестовые данные
USE_TEST_DATA=false

# Включить мокирование внешних сервисов
MOCK_EXTERNAL_SERVICES=false

# =============================================================================
# НАСТРОЙКИ ОТЛАДКИ
# =============================================================================

# Включить отладочный режим
DEBUG_MODE=false

# Включить подробные логи SQL
ENABLE_SQL_LOGGING=false

# Включить профилирование запросов
ENABLE_QUERY_PROFILING=false

# Включить трассировку выполнения
ENABLE_EXECUTION_TRACING=false
