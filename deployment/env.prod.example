# Production Environment Variables for staffprobot.ru
# Copy this file to .env.prod and fill in the values

# Основные настройки
APP_NAME=StaffProBot
ENVIRONMENT=production
DEBUG=false
VERSION=1.0.0

# База данных
POSTGRES_DB=staffprobot_prod
POSTGRES_USER=staffprobot_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Redis
REDIS_PASSWORD=your_secure_redis_password_here

# RabbitMQ
RABBITMQ_USER=staffprobot_user
RABBITMQ_PASSWORD=your_secure_rabbitmq_password_here

# Telegram Bot
TELEGRAM_BOT_TOKEN_PROD=your_telegram_bot_token_here
TELEGRAM_BOT_TOKEN_OVERRIDE=

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Безопасность
SECRET_KEY=your_very_secure_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=1440

# Домен
DOMAIN=staffprobot.ru
API_DOMAIN=api.staffprobot.ru
ADMIN_DOMAIN=admin.staffprobot.ru
BOT_DOMAIN=bot.staffprobot.ru

# SSL
SSL_EMAIL=admin@staffprobot.ru

# Мониторинг
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password_here

# Email уведомления
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM=StaffProBot <noreply@staffprobot.ru>

# Slack уведомления
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Telegram уведомления
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here

# Бэкапы
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=staffprobot-backups
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key
BACKUP_S3_REGION=us-east-1

# Лимиты
MAX_DISTANCE_METERS=100
LOCATION_ACCURACY_METERS=50
MAX_ACTIVE_SHIFTS_PER_USER=1
REQUIRE_LOCATION_FOR_SHIFTS=true
LOCATION_TIMEOUT_SECONDS=300

# Часовой пояс
DEFAULT_TIMEZONE=Europe/Moscow

# Мониторинг производительности
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/staffprobot/app.log

# Rate limiting
API_RATE_LIMIT=100
WEBHOOK_RATE_LIMIT=50

# Health checks
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=30

# Docker
IMAGE_NAME=staffprobot
IMAGE_TAG=latest
